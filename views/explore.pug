//- explore.pug - Explore blogs by tag
extends layout

block content
  h1.page-title Exploring: #{tag}
  
  if blogs.length > 0
    .blog-grid
      each blog in blogs
        .blog-card
          h3.blog-title
            a(href=`/blog/${blog.id}`)= blog.title
          p.blog-meta Posted by #{blog.author} on #{blog.date}
          p.blog-excerpt= blog.content.substring(0, 100) + '...'
          .blog-tags
            each tag in blog.tags
              a.tag(href=`/explore/${tag}`)= tag
  else
    p.no-results No blogs found with tag: #{tag}