// new.pug - Create new blog post template
extends layout

block content
  h1.page-title Create New Blog Post
  
  form.blog-form(action="/new", method="POST")
    .form-group
      label(for="title") Title
      input#title.form-control(type="text", name="title", required)
    
    .form-group
      label(for="author") Author
      input#author.form-control(type="text", name="author", required)
    
    .form-group
      label(for="content") Content
      textarea#content.form-control(name="content", rows="10", required)
    
    .form-group
      label(for="tags") Tags (comma separated)
      input#tags.form-control(type="text", name="tags", placeholder="e.g. nodejs, pug, webdev")
    
    .form-actions
      button.button.primary(type="submit") Publish Post
      a.button.secondary(href="/") Cancel